{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "plugins": [
    "prettier"
  ],
  "extends": [ "eslint:recommended", "plugin:import/errors", "plugin:import/warnings"],
  "parserOptions": {
      "sourceType": "module"
  },
  "rules": {
    "no-extra-semi": 0,
    "no-mixed-spaces-and-tabs": 0,
    "jest/valid-expect": 0,
    "linebreak-style": ["error", "unix"],
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "semi": false
      }
    ]
  }
}
